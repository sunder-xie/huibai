<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns="http://java.sun.com/xml/ns/javaee" 
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>乐汇百材</display-name>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:config/spring/applicationContext.xml</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>GetUserInfoFilter</filter-name>
    <filter-class>com.app.common.filter.UserInfoFilter</filter-class>
    <init-param>
      <description>检查失败后需要定向到的页面</description>
      <param-name>redirectURL</param-name>
      <param-value>pages/Login/userLogin.jsp</param-value>  
    </init-param>
    <init-param>
      <description>不用检查用户的页面列表，用&quot;,&quot;分隔</description>
      <param-name>notCheckURLList</param-name>
      <param-value>login.jsp,login.action</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>GetUserInfoFilter</filter-name>
    <url-pattern>/pages/User/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>GetUserInfoFilter</filter-name>
    <url-pattern>/pages/BuyCar/*</url-pattern>
  </filter-mapping>
   <filter-mapping>
    <filter-name>GetUserInfoFilter</filter-name>
    <url-pattern>/pages/Order/*</url-pattern>
  </filter-mapping>
   <filter-mapping>
    <filter-name>GetUserInfoFilter</filter-name>
    <url-pattern>/pages/UnifyPay/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>Spring MVC Dispatcher Servlet</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>WEB-INF/classes/config/spring/applicationContext-mvc.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Spring MVC Dispatcher Servlet</servlet-name>
    <url-pattern>*.action</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
  	<welcome-file>index.html</welcome-file>
  	<welcome-file>index.htm</welcome-file>
  	<welcome-file>index.jsp</welcome-file>
  	<welcome-file>default.html</welcome-file>
  	<welcome-file>default.htm</welcome-file>
  	<welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>